# Local Development Environment Configuration
# Copy this file to .env for local development
# DO NOT commit .env file to git

# =====================================================
# Application Settings
# =====================================================
APP_ENV=local
DEBUG_MODE=true

# =====================================================
# Database Configuration (Local MySQL)
# =====================================================
DB_HOST=localhost
DB_NAME=acrylic_stand
DB_USER=root
DB_PASS=your_local_password
DB_PORT=3306

# =====================================================
# Storage Configuration
# =====================================================
# Local file storage (default)
USE_CLOUD_STORAGE=false

# If you want to test with GCS locally, set to true and configure:
# USE_CLOUD_STORAGE=true
# GCS_BUCKET=gs://your-test-bucket/
# GCP_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# =====================================================
# Email Configuration
# =====================================================
SHOP_ADMIN_EMAIL=admin@localhost
SHOP_FROM_EMAIL=noreply@localhost
SUBCONTRACT_EMAIL=

# =====================================================
# Payment Gateways (Test Keys)
# =====================================================
# Stripe Test Keys
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key

# PayPay Test Keys
PAYPAY_API_KEY=your_paypay_test_key
PAYPAY_API_SECRET=your_paypay_test_secret

# =====================================================
# Email Service (Optional)
# =====================================================
# SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# =====================================================
# Security
# =====================================================
# Admin panel password (CHANGE THIS!)
ADMIN_PASSWORD=your_secure_admin_password_here

# Session secret
SESSION_SECRET=your_random_session_secret_here

# CSRF token secret
CSRF_SECRET=your_random_csrf_secret_here
